{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run ComfyUI",
            "type": "debugpy",
            "request": "launch",
            "cwd": "/workspace/ComfyUI",
            "program": "main.py",
            "purpose": ["debug-in-terminal"],
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "args": [
                "--listen",
                "--disable-cuda-malloc"
            ],
            "python": "/workspace/miniconda3/envs/comfystream/bin/python"
        },
        {
            "name": "Run ComfyStream",
            "type": "debugpy",
            "request": "launch",
            "cwd": "/workspace/comfystream/server",
            "program": "app.py",
            "args": [
                "--workspace=/workspace/ComfyUI",
                "--media-ports=5678",
                "--host=0.0.0.0",
                "--port=8000",
                "--log-level=DEBUG",
                "--comfyui-inference-log-level=DEBUG",
                "--warmup-workflow=workflows/comfystream/audio-transcription-srt-optimized.json",
                "--enable-trickle"
            ],            
            "env": {
                "ORCH_URL": "https://172.17.0.1:9995",
                "ORCH_SECRET": "orch-secret",
                "CAPABILITY_NAME": "trickle-stream-example",
                "CAPABILITY_DESCRIPTION": "Flip video upside down using pytrickle",
                "CAPABILITY_URL": "http://172.17.0.1:8000",
                "CAPABILITY_PRICE_PER_UNIT": "0",
                "CAPABILITY_PRICE_SCALING": "1",
                "CAPABILITY_CAPACITY": "1"
            },
            "justMyCode": true,
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Run ComfyStream UI (Node.js)",
            "type": "node",
            "request": "launch",
            "cwd": "/workspace/comfystream/ui",
            "console": "integratedTerminal",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev:https"
            ],
            "serverReadyAction": {
                "pattern": "listening on",
                "uriFormat": "http://localhost:3000",
                "action": "openExternally"
            }
        },
    ], "compounds": [
        {
            "name": "Run ComfyStream and UI",
            "type": "composite",
            "stopAll": true,
            "configurations": [
                "Run ComfyStream",
                "Run ComfyStream UI (Node.js)"
            ]
        }
    ]
}
